        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”— Share Caption"
        android:layout_marginTop="12dp" />
</LinearLayout>